@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center my-5">
    <h1 class="display-4">Welcome to JustCook!</h1>
    <p class="lead">JustCook is your one-stop solution for managing, discovering, and sharing amazing recipes.</p>
    <hr class="my-4">
    <p>Browse our curated collection, add your own recipes, and connect with fellow food enthusiasts.</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Recipes")" role="button">Explore Recipes</a>
</div>

<section class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Discover New Flavors</h2>
            <p>Search for recipes that match your taste and dietary preferences. Our platform brings together a variety of cuisines and styles for you to explore.</p>
        </div>
        <div class="col-md-6">
            <h2>Share Your Creations</h2>
            <p>Create and manage your own recipes easily. Share your secret ingredients and cooking tips with a community that loves food as much as you do.</p>
        </div>
    </div>

</section>
