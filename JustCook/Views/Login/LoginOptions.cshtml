@{
    ViewData["Title"] = "Choose Login Method";
}

<div class="container text-center mt-5">
    <h1>Choose Your Login Method</h1>
    <p>Please select an authentication provider to sign in.</p>
    <div class="mt-4">
        <a class="btn btn-outline-primary me-3" asp-action="LoginWithGoogle">Login with Google</a>
        <a class="btn btn-outline-secondary" asp-action="LoginWithMicrosoft">Login with Microsoft</a>
    </div>
</div>
